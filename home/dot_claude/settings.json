{
  "cleanupPeriodDays": 3650,
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git remote:*)",
      "Bash(git fetch:*)",
      "Bash(git ls-files:*)",
      "Bash(git rev-parse:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue status:*)",
      "Bash(gh repo view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh auth status:*)",
      "Bash(go version:*)",
      "Bash(go env:*)",
      "Bash(go list:*)",
      "Bash(go mod graph:*)",
      "Bash(go mod verify:*)",
      "Bash(go vet:*)",
      "Bash(gofmt:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(date)",
      "Bash(whoami)",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(su :*)",
      "Bash(su)",
      "Bash(pkexec:*)",
      "Bash(doas:*)",
      "Bash(brew:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -fr:*)",
      "Bash(rm -r /:*)",
      "Bash(rm -rf /:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(parted:*)",
      "Bash(format:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(halt:*)",
      "Bash(poweroff:*)",
      "Bash(init:*)",
      "Bash(systemctl poweroff:*)",
      "Bash(systemctl reboot:*)",
      "Bash(chmod 777:*)",
      "Bash(chmod -R 777:*)",
      "Bash(chown -R:*)",
      "Bash(> /dev/sda:*)",
      "Bash(mv /* :*)",
      "Bash(mv / :*)",
      "Bash(nc -e:*)",
      "Bash(ncat -e:*)",
      "Bash(bash -i >& /dev/tcp:*)",
      "Bash(useradd:*)",
      "Bash(userdel:*)",
      "Bash(usermod:*)",
      "Bash(groupadd:*)",
      "Bash(groupdel:*)",
      "Bash(passwd:*)",
      "Bash(visudo:*)",
      "Bash(iptables -F:*)",
      "Bash(ufw disable:*)",
      "Bash(firewall-cmd --remove:*)",
      "Bash(history -c:*)",
      "Bash(shred:*)",
      "Bash(xmrig:*)",
      "Bash(cryptominer:*)",
      "Bash(coinhive:*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(.envrc)",
      "Read(**/.envrc)",
      "Read(~/.config)",
      "Read(~/.config/**)",
      "Read(~/.local)",
      "Read(~/.local/**)",
      "Read(~/.cache)",
      "Read(~/.cache/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Write(//tmp/**)",
      "Edit(//tmp/**)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "ccnewline"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/smart-notify.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/smart-notify.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  }
}
